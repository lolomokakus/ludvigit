#!/usr/bin/env bash

# find out what sed we're using
if [ "$(uname)" = "Linux" ]; then
	sed=sed
elif [ -n "$(command -v gsed)" ]; then
	sed=gsed
else
	echo missing dependency: GNU sed (gsed)
	exit 1 # non-GNU sed doesn't support case-insensitivity, so we can't use it
fi

$sed -e "
s|mine|GREG\'S|Ig
s|me|GREG|Ig
s|my|GREG\'S|Ig
s|i|GREG|Ig
"
