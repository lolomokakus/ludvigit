#!/usr/bin/env bash

# find out what sed we're using
if which sed >&- 2>&- && sed --version 2>&1 | grep GNU >&- 2>&- ; then
	sed=sed
elif which gsed >&- 2>&- ; then
	sed=gsed
else
	echo "missing dependency: GNU sed (gsed)"
	exit 1 # non-GNU sed doesn't support case-insensitivity, so we can't use it
fi

$sed -e "
s|mine|GREG\'S|Ig
s|me|GREG|Ig
s|my|GREG\'S|Ig
s|i|GREG|Ig
"
