#!/usr/bin/env bash

# really weird way of displaying the pyramid.
# essentially, the ascii art is decoded and decompressed at runtime.
# this was the only way i could make it display correctly without cat'ing another file.
# using --decode instead of -d or -D makes the script work on both mac os and linux.
base64 --decode <<<"" | gunzip

if [ -z "$(command -v beep)" ] ; then
	# if beep is not installed, don't beep
	exit 0
fi

beep -f 880 -l 500 # a5, 500 ms
beep -f 1318.51 -l 500 # e6, 500 ms
beep -f 1174.66 -l 500 # d6, 500 ms
beep -f 1318.51 -l 500 # e6, 500 ms
beep -f 1567.98 -l 500 # g6, 500 ms
beep -f 1318.51 -l 500 # e6, 500 ms

exit 0
