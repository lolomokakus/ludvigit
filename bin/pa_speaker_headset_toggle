#!/usr/bin/bash
if pacmd list-cards | grep "active profile: <output:analog-stereo+input:analog-stereo>" >/dev/null ; then
  pacmd set-card-profile 1 output:iec958-stereo+input:analog-stereo
  notify-send "Audio output switched to speakers"
elif pacmd list-cards | grep "active profile: <output:iec958-stereo+input:analog-stereo>" >/dev/null ; then
  pacmd set-card-profile 1 output:analog-stereo+input:analog-stereo
  notify-send "Audio output switched to headphones"
fi
